  <script>  
  
Ext.require([
    'Ext.form.*',
    'Ext.data.*',
    'Ext.tip.QuickTipManager'
]);

Ext.onReady(function() {
		Ext.QuickTips.init();

    var form = Ext.create('Ext.form.Panel', {
        renderTo: 'docbody',
        //title   : '设置系统IP地址',
        autoHeight: true,
        width   : 550,
        bodyPadding: 20,
        frame:false,
		    border:false,
        defaults: {
            anchor: '100%',
            labelWidth: 100
        },
        items   : [
             
				{
                xtype: 'fieldset',
                title: '网络地址端口设置',
                collapsible: true,
                defaults: {
                    labelWidth: 110,
                    
                    layout: {
                        type: 'hbox',
                        defaultMargins: {top: 0, right: 10, bottom: 0, left: 0}
                    }
                },
                items: [
                    {
                        xtype     : 'textfield',
                        name      : 'AdminIp',
						value:'192.168.20.188',
                        fieldLabel: '网络地址'
						
                    },
                    {
                        xtype     : 'textfield',
                        name      : 'AdminPort',
						value:'9080',
                        fieldLabel: '端口'

                    }
                ]
            },
            {
                xtype: 'fieldset',
                title: '网卡地址设置',
                collapsible: true,
                defaults: {
                    labelWidth: 90,
                    anchor: '100%',
                    layout: {
                        type: 'hbox',
                        defaultMargins: {top: 0, right: 10, bottom: 0, left: 0}
                    }
                },
                items: getNICDate()
            },
			{
                xtype: 'fieldset',
                title: '缺省网关DNS设置',
                collapsible: true,
                defaults: {
                    labelWidth: 110,
                    
                    layout: {
                        type: 'hbox',
                        defaultMargins: {top: 0, right: 10, bottom: 0, left: 0}
                    }
                },
                items: [
                    {
                        xtype     : 'textfield',
                        name      : 'defgateway',
						value:'192.168.20.254',
                        fieldLabel: '缺省网关'
						
                    },
                    {
                        xtype     : 'textfield',
                        name      : 'dnsserver1',
						value:'',
                        fieldLabel: 'DNS1'
						
                       
                    },{
                        xtype     : 'textfield',
                        name      : 'dnsserver2',
						value:'202.96.199.133',
                        fieldLabel: 'DNS2'
						
                    }
                ]
            }
   
        ],
		    buttonAlign:'center',
        buttons: [
            {
                text   : '保存',
                handler: function() {
				alert('已经保存');
                 this.up('form').getForm().doAction('submit',{
                 url:'/pronline/Msg',
                 method:'post',
                 params:{FunName:'ncmWebSystemSave_base',etcount:'1'},   
                  success:function(form,action){
             //   	var msgaa=action.result.reason;
                 alert(action.result.success);
                 }   
                 })

                }
				
            },
            {
                text   : '应用',
                handler: function() {
             if(confirm('请检查一下您的网络配置是否正确？不正确的网络配置会导致访问不了设备！eth2为备用网口，默认IP为192.168.218.218供应急使用。')){
                 this.up('form').getForm().doAction('submit',{
                 url:'/pronline/Msg',
                 method:'post',
                 params:{FunName:'ncmWebSystemSave_base',etcount:'1',app:'app'},   
                  success:function(form,action){
             //   	var msgaa=action.result.reason;
      //           store.load();
                // alert('正在修改网络参数，可能出现短暂断网，请稍候!');
                 }   
                 })
               }
                }
            }
        ]
    });
    

    
    
    
});
